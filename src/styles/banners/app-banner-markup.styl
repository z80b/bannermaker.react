.app-banner-$hash
    display table-cell
    margin 0
    padding 0
    background-color $bg
    text-align center
    vertical-align middle
    
    &__html, &__body
        padding 0
        margin 0
        width 100%
        height 100%
        
    &__body
        display table
    
    &__title, &__description 
        color $color
        
    &__title 
        display block
        font-size 16px
        font-weight 700
        line-height 25px
        position relative
        margin 0
    
    &__description 
        display block
        font-size 13px
        font-weight 400
        line-height 18px
        margin 4px 0 8px
    
    &-promocode 
        display inline-block
        margin 0
        padding 10px 24px
        color #000
        background-color #fff
        -moz-border-radius 4px
        -webkit-border-radius 4px
        border-radius 4px
        text-decoration none
        font-size 16px
        font-weight 400
        line-height 1
    
        &__code 
            font-weight 700
    
    &__conditions 
        display none
    
        &-button 
            display inline-block
            width 18px
            height 18px
            -moz-border-radius 50%
            -webkit-border-radius 50%
            border-radius 50%
            border 1px solid #ffffff
            color #ffffff
            text-align center
            text-decoration none
            font-size 16px
            line-height 20px
            margin 0 0 0 6px
            position relative
            top -2px