.lookbook-trends
  padding-top 20px

  &-wrapper
    width 300px
    height 336px
    float left
    overflow hidden

  &-preview-img
    width: inherit

  &-smallerwidth
    width 16%
    display inline-block

  &-middlewidth
    width 45%
    display inline-block
    margin-right 2%

  &-textarea
    width 100%
    height 60px

  &-slideitem
    width: 70%

  .control-label
    margin-bottom 5px

  .banner-preview-wrapper
    width 100%
    margin 0 auto

  .banner-preview
    width 300px
    margin-left 20px
    text-align left
    float left

  .banner-slide-form
    width 80%
    margin 0 auto

  label
    display block

  .bm-label
    margin-right 10px

  .bm-select
    width 100%
    border-radius 2px
    outline none
    height 34px
    margin-bottom 20px
    padding 6px 12px
    font-size 13px
    line-height 1.42857143
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc

  .add_button
    margin-bottom 20px
    background-color #5cb85c
    border none
    padding 5px 20px
    outline none
    color #fff
    border-radius 3px
    font-weight 400

  .button-area
    border-radius 2px
    display block
    margin 0 auto
    text-align center
    width 50%
    margin-top 1em
    margin-bottom 2em
    border 1px solid #ccc

  .bm-title
    color #333
    text-align left
    background-color #f5f5f5
    border-color #ddd
    padding 10px 15px
    border-bottom 1px solid transparent
    border-top-left-radius 3px
    border-top-right-radius 3px

  .bm__cell
    float left
    margin-right 14px

  .bm-images
    margin 0 auto
    text-align center
    display table

    .remove_button
      display table-cell
      float left
      margin-top 28px
      background-color #d9534f
      border none
      outline none
      color #fff
      border-radius 3px
      font-weight 400

    .input-list__cell
      width 30%
      float left