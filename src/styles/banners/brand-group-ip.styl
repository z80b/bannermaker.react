@import '../b-form'
@import '../elements/*.styl'
@import '../mixins/*.styl'

#markup
    display none
    
.main-container
    min-width 1346px
    
.b-brand-group-ip
    padding 20px
    
    &__preview
        //background-color #aaa
        background-color rgba(#000, .2)
        background-image linear-gradient(45deg, rgba(#000, .1) 25%, transparent 25%, transparent 75%, rgba(#000, .1) 75%, rgba(#000, .1)), linear-gradient(45deg, rgba(#000, .1) 25%, transparent 25%, transparent 75%, rgba(#000, .1) 75%, rgba(#000, .1));
        background-size 20px 20px
        background-position 0 0, 30px 30px
        padding 46px 20px
        margin 0 0 20px
        border-radius 5px
        
        &.widescreen
            padding 20px
        
        &-inner
            background-color rgba(#fff,.8)
            position relative
            width 960px
            margin auto
            padding 30px
            box-sizing content-box
            
            .widescreen &
                width 1206px
            
    &__banners
        margin 0 0 0 -20px
        
        &.b-banners--three, &.b-banners--four
            padding 0 0 30px
            
    &__banner
        display inline-block
        position relative
        width 470px
        height 200px
        background 50% 50% no-repeat
        background-size auto 100%
        background-color #ccc
        margin 0 0 0 20px
        cursor default
        
        &[href]
            cursor pointer
        
        .widescreen &
            width 593px
            height 253px
            
        .b-banners--three &
            width 306px
            height 200px
            background-position 100% 50%
            
            .widescreen &
                width 388px
                height 253px
                
        .b-banners--four &
            width 225px
            height 200px
            background-position 100% 50%
            
            .widescreen &
                width 285px
                height 253px
                
        &--default
            .b-banners--three &
                background-size 200% auto
                background-position 100% 0
                
        &-text
            display table-cell
            color #333
            overflow hidden
            word-break break-all
            white-space pre-line
            font(16px, 500, 1.4)
            text-align center
            vertical-align middle
            
            .b-banners--three &
            .b-banners--four &
                display block
                vertical-align top
                min-height 3em
                padding 15px 0
                background-color #fff
                margin -30px 0 0
            
            &-wrapper
                position absolute
                display table
                box-sizing border-box
                width 50%
                height 100%
                padding 20px
                
                .b-banners--three &
                .b-banners--four &
                    display block
                    left 0
                    width 100%
                    height auto
                    top 100%
                    padding 0 20px
                
        &-logo
            position absolute
            box-sizing border-box
            width 50%
            height 100%
            background 50% 50% no-repeat
            
            .b-banners--three &
            .b-banners--four &
                width 100%
                background-position 50% 100%
                border-bottom solid 20px transparent

    
    .b-form__fieldset
        margin 0 0 20px
        
    .b-fieldset
        &__body
            &-inner
                margin 0 0 0 -10px
        
    .b-settings
        &__row
            display inline-block
            box-sizing border-box
            padding 0 0 10px 10px
            width 50%
            
            &-inner
                border solid 1px rgba(#000, .1)
                border-radius 5px
                padding 10px
            