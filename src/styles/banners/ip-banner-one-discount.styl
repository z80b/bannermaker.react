/* width */
.ibanner ::-webkit-scrollbar {
    width: 5px;
}

/* Track */
.ibanner ::-webkit-scrollbar-track {
    background: #f1f1f1; 
}
 
/* Handle */
.ibanner ::-webkit-scrollbar-thumb {
    background: #888; 
}

/* Handle on hover */
.ibanner ::-webkit-scrollbar-thumb:hover {
    background: #555; 
}


/* Test css grid */
.b-form__fieldset_buttons-grid {
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 2vw;
}

.buttons-grid-item {
  font-size: 1rem;
  padding: 1em;
  background: #f9eeb3;
  text-align: left;
  display: grid;
  grid-template-rows: repeat(4, 1fr);
  grid-template-columns: auto 1fr;
  grid-area: 1;
  align-items: center;
  grid-auto-rows: 1fr;
}

.buttons-grid-item__label {
  margin: 0;
  padding: 0;
}

.buttons-grid-item__radio {
  margin: 0 10px 0 0;
  padding: 0;
  width: auto;
}