@import '../b-form'
@import '../elements/*.styl'
@import '../mixins/*.styl'

.ip-banner-one-discount
  width 100%
  margin 0

  .ibanner
    padding 20px 0
    width 98%
    margin 0 auto

    &__promocode
      position absolute
      z-index 2
      width 195px
      color #333
      background-color #fff
      cursor pointer
      height 40px
      font-size 16px
      line-height 41px
      right 25px
      font-weight: 400;
      top 50%
      margin-top -20px

      &.white
        background-color #fff
        color #333

        &:hover
          .ibanner__promocode-inner-wrap
            color #fff

        .ibanner__promocode-hover-wrapper
          position: absolute
          top 0
          bottom 0
          left 0
          width 0
          background-color #000
          transition width .3s ease 0s
        .ibanner__promocode-hint
          background-color #fff
          color #333
          &:before
            bottom -10px
            border-width 10px 10px 0 10px
            border-color #fff transparent transparent transparent

      &.black
        color #fff
        background-color #333

        &:hover
          .ibanner__promocode-inner-wrap
            color #000
        .ibanner__promocode-hover-wrapper
          position: absolute
          top 0
          bottom 0
          left 0
          width 0
          background-color #fff
          transition width .3s ease 0s
        .ibanner__promocode-hint
          color #333
          background-color #fff
          &:before
            bottom -10px
            border-width 10px 10px 0 10px
            border-color #fff transparent transparent transparent

    &-small-ip
      display table
      width 100%
      height 130px
      overflow hidden
      position relative
      background #ef5c6e
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      -o-box-sizing border-box
      box-sizing border-box

      &:hover
        .ibanner__promocode-hint
          transition bottom .15s ease, top .15s ease, opacity .3s ease-in
          opacity 1
          bottom 55px

        .ibanner__promocode-hover-wrapper
          width 100%

        .ibanner__promocode.white .ibanner__promocode-inner-wrap
            color #fff

        .ibanner__promocode.black .ibanner__promocode-inner-wrap
            color #000

    &-small-ip__text
      display table-cell
      vertical-align middle
      width 100%
      text-align center
      font(16px, 400, 20px)
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      -o-box-sizing border-box
      box-sizing border-box

    &-small-ip h3
      display block
      font(24px, 400, 30px)
      text-transform uppercase
      letter-spacing 2px
      margin 0 0 10px

    &-small-ip-hinter
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      z-index 1
      background #ef5c6e
      font(13px, 400, 16px)
      color #fff
      padding 20px 0 20px 20px
      opacity 0
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      -o-box-sizing border-box
      box-sizing border-box
      -webkit-transition opacity .2s ease
      -moz-transition opacity .2s ease
      -o-transition opacity .2s ease
      transition opacity .2s ease

    &-small-ip-hinter-inner
      width 70%
      overflow auto
      height 100%
      padding 0 12px 0 0

    &-small-ip__show-hinter,
    &-small-ip__close-hinter
      font(13px, 400, 1)
      color #fff
      border-bottom 1px solid #fff
      position absolute
      bottom 10px
      right 25px
      z-index 2
      cursor pointer

    &-menu
      display table
      width 100%
      list-style-type none
      padding 0
      margin 0
      font-size 0

    &-menu__item
      display table-cell
      min-width 100px
      border-left 1px solid #fff
      position relative

    &-menu__item:first-child
      border-left 0

    &-menu__link
      display block
      height 40px
      padding 0
      cursor pointer
      text-decoration none
      font(16px, 400, 40px)
      color #333
      text-align center
      background #f1f1f1
      position relative

      -webkit-transition background .1s linear, border-color .1s linear
      -moz-transition background .1s linear, border-color .1s linear
      -o-transition background .1s linear, border-color .1s linear
      transition background .1s linear, border-color .1s linear

    &-menu__link:hover
      background #888
      color #fff

    &__promocode b
      font-weight 600

    &__promocode-inner
      position relative

    &__promocode-inner-wrap
      z-index 5
      position relative
      text-align center
      transition color .3s ease 0s

    &__promocode-hint
      position absolute
      width 195px
      color #333
      background-color #fff
      left 0
      bottom 0
      opacity 0
      height 25px
      font-size 13px
      line-height 25px
      text-align center

      &:before
        content ''
        position absolute
        left 50%
        margin-left -10px
        width 0
        height 0
        border-style solid

  .form-group_promocode,
  .form-group_promocode-style
      width 200px
      display inline-block
      
.countdown
    position absolute
    left 0
    top 0
    font(16px, 400)
    font-size 16px
    text-align center
    color #000
    letter-spacing .015em
    cursor move
    
    &__title
        display block
        height 22px
        line-height 22px
        white-space nowrap
        
    &__value
        display inline-block
        margin-left 5px
        font(400, 36px)
        text-align left
        white-space nowrap
        
        &::after
            padding-left 1px
            font(400)
            
        &_days
            margin-left 0
            
            &::after
                content 'д'
            
        &_hours::after
            content 'ч'
            
        &_minutes::after
            content 'м'
            
        &_seconds
            display inline-block
            width 41px
            
            &::after
                content 'с'
                
        &_hidden
            display none
            
        &::before
            content ''
            display inline-block
            height 15px
            border-left 1px solid #000
            margin-right 20px
            
        &:first-child::before
            display none
      

.countdown {
  width: auto !important;
  transform: translate(0px, 0px) !important;
  margin-left: 0 !important;
  left: 0;
  position: static !important;
}

.countdown__title,
.countdown-values {
  display: inline-block;
}

.countdown__title {
  margin-right: 10px;
}

.countdown__value:before {
  display: none;
}



  //form

  .form-section
    border-radius 2px
    display block
    margin 0 auto
    text-align center
    width 98%
    margin-bottom 2em
    border 1px solid #ccc

    &__header
      color #333
      text-align left
      background-color #f5f5f5
      border-color #ddd
      padding 10px 15px
      border-bottom 1px solid transparent
      border-top-left-radius 3px
      border-top-right-radius 3px

  .form-select
    display block
    margin 0 auto
    margin-bottom 20px
    border-radius 2px
    outline none
    height 34px
    padding 6px 12px
    font-size 13px
    line-height 1.42857143
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc

  .add_button
    margin-bottom 20px
    background-color #5cb85c
    border none
    padding 5px 20px
    outline none
    color #fff
    border-radius 3px
    font-weight 400

  .input-list
    width 80%
    margin 0 auto
    text-align center
    display table

    &__checkbox
      display table-cell
      width 15px
      vertical-align middle
      margin 0
      margin-right 5px

    &__textarea
      display table-cell
      outline none
      width 90%
      height 50px
      margin-bottom 27px

    &__row
      display table-row

    &__item
      display table-cell
      width 90%
      transition all 0.3s
      &[disabled]
        background-color #f0f0f0
        
    &__item[type="number"]
      width 10%

    &__label
      display table-cell
      width 10%

    &__cell
      display table-cell
      width 50%

    &--three
      margin 0 auto
      text-align center
      display table

      .remove_button
        display table-cell
        float right
        margin-top 5px
        background-color #d9534f
        border none
        outline none
        color #fff
        border-radius 3px
        font-weight 400

      .input-list__cell
        width 30%
        float left


.ibanner-radio-seeconditions,
.ibanner-radio-closeconditions,
.ibanner-small-ip__close-hinter {
    display: none;
}

.ibanner-radio-seeconditions:checked + .ibanner-radio-closeconditions + .ibanner-small-ip-hinter {
    opacity: 1;
}

.ibanner-radio-seeconditions:checked + .ibanner-radio-closeconditions + .ibanner-small-ip-hinter + label .ibanner-small-ip__show-hinter {
    display: none;
}

.ibanner-radio-seeconditions:checked + .ibanner-radio-closeconditions + .ibanner-small-ip-hinter + label + label .ibanner-small-ip__close-hinter {
    display: block;
}

.ibanner-radio-closeconditions:checked + .ibanner-small-ip-hinter {
    opacity: 0;
}

.ibanner-radio-closeconditions:checked + .ibanner-small-ip-hinter + label .ibanner-small-ip__show-hinter {
    display: block;
}

.ibanner-radio-closeconditions:checked + .ibanner-small-ip-hinter + label + label .ibanner-small-ip__close-hinter {
    display: none;
}

