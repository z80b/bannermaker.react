@import '../../styles/mixins/*.styl'

.teasers-redesign

  .form-label
    margin 0 auto
    text-align center
    width 100%
    padding 20px 0 10px 0

  .form-select
    display block
    margin 0 auto
    margin-bottom 20px
    border-radius 2px
    outline none
    height 34px
    padding 6px 12px
    font-size 13px
    line-height 1.42857143
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc

  .banner-slide
    display block

    &-form
      padding-top 20px

    &-wrap
      display block
      width 100%

      .trend-teaser
        width 225px
        margin 0 auto
        position relative
        text-align center

        &__wrapper
          width 100%
          background-size cover
          height 225px
          margin-bottom 20px
          position relative
          cursor pointer

          &:after
            content ''
            position absolute
            top: 0 
            left 0
            width 100%
            height 100%
            background-color #000
            opacity 0
            -webkit-transition .5s opacity ease
            -moz-transition .5s opacity ease
            -o-transition .5s opacity ease
            transition .5s opacity ease

          &:hover:after
            opacity .2

          &:hover
            .trend-teaser__button
              opacity 1

        &__title
          font(16px, 600)
          font-weight 600
          color #333
          margin-bottom 12px
          text-align left
          font-weight 600

        &__desc
          font(13px, 400)
          color #888
          text-align left

        &__button
          position absolute
          font(13px, 400, 40px)
          display block
          width 150px
          top 50%
          left 50%
          text-align center
          margin -20px 0 0 -75px
          opacity 0
          -webkit-transition .5s opacity ease
          -moz-transition .5s opacity ease
          -o-transition .5s opacity ease
          transition .5s opacity ease
          z-index 1
          text-decoration none

          &[data-button-style="white"]
            color #333
            background-color #fff

          &[data-button-style="black"]
            color #fff
            background-color #333

      .brand-teaser
        width 306px
        position relative
        text-align center
        margin 0 auto

        &__wrapper
          background-size cover
          height 339px
          margin-bottom 20px
          position relative
          cursor pointer

          &:after
            content ''
            display block
            position absolute
            width 100%
            height 100%
            background #000
            opacity 0
            transition opacity .4s ease
            z-index 1

          &:hover .brand-teaser__button
            opacity 1

          &:hover:after
            opacity .2

        &__title
          font(16px, 600, 24px)
          display block
          color #333
          text-align center

        &__desc
          font(13px, 400, 24px)
          display block
          color #888
          text-align center

        &__button
          display block
          width 200px
          height 40px
          text-align center
          position absolute
          top 50%
          left 50%
          margin -20px 0 0 -100px
          transition all .2s linear
          font(13px, 400, 40px)
          background #fff
          color #333
          opacity 0
          text-decoration none !important
          z-index 2

          &[data-button-style="white"]
            background #fff
            color #333

          &[data-button-style="black"]
            background #333
            color #fff

      .premium-teaser
        width 306px
        position relative
        text-align center
        margin 0 auto

        &__wrapper
          background-size cover
          height 339px
          margin-bottom 20px
          position relative
          cursor pointer

          &:after
            content ''
            display block
            position absolute
            width 100%
            height 100%
            background #000
            opacity 0
            transition opacity .4s ease
            z-index 1

          &:hover .premium-teaser__button
            opacity 1

          &:hover:after
            opacity .2

        &__title
          font(16px, 600, 24px)
          display block
          color #333
          text-align center

        &__desc
          font(13px, 400, 24px)
          display block
          color #888
          text-align center

        &__button
          display block
          width 200px
          height 40px
          text-align center
          position absolute
          top 50%
          left 50%
          margin -20px 0 0 -100px
          transition all .2s linear
          font(13px, 400, 40px)
          background #fff
          color #333
          opacity 0
          text-decoration none !important
          z-index 2

          &[data-button-style="white"]
            background #fff
            color #333

          &[data-button-style="black"]
            background #333
            color #fff

      @media screen and (min-width 1206px)

        .trend-teaser
          width 285px

          &__wrapper
            height 285px
            margin-bottom 24px

          &__title
            font-size 24px
            line-height 24px
            margin-bottom 15px

          &__desc
            font-size 16px
            line-height 24px

        .brand-teaser
          width 388px

          &__wrapper
            height 430px
            margin-bottom 24px

          &__title
            font-size 24px

          &__desc
            font-size 16px

        .premium-teaser
          width 388px

          &__wrapper
            height 430px
            margin-bottom 24px

          &__title
            font-size 24px

          &__desc
            font-size 16px
  .banner
    &-input
      &_checkbox
        display inline-block
        margin-right 10px
        margin-bottom 5px
        vertical-align middle
        width auto

      &_select
        margin 0 0 20px
        width 150px

    &-label
      &_checkbox
        display inline-block
        margin-right 10px
        vertical-align middle
        margin-bottom 5px
