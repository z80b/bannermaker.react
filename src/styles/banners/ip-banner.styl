
@import '../b-form'
@import '../elements/*.styl'

.bannermaker {

    &.ip-banner {
        width: 1206px;
        box-sizing: border-box;
        background: hsla(0,0%,100%,.9);
        margin: 0 auto;
        padding-bottom: 50px;

        .b-field__textarea {
            line-height: 1.4;
            height: 34px;
        }

        .banner-preview {
            width: 980px;
            padding: 20px 10px;
            background-color: #fff;
            margin: 0 auto 10px;

            .b-draggable {
                &__element {
                    display: inline-block;
                    position: absolute;
                    cursor: move;
                    
                    &--text, &--image {
                        position: absolute;
                    }
                    
                    &--text {
                        z-index: 10;
                    }
                        
                    &--button {
                        @extends $promoButton
                    }

                    &--promocode {

                        .ibanner__promocode {
                            @extends $promoButton
                            padding: 5px 0;

                            &[data-style="white"],
                            &[data-style="white"]:hover  {
                                color: #333;
                                background: #fff;
                                border: none;
                            }

                            &[data-style="black"],
                            &[data-style="black"]:hover {
                                color: #fff;
                                background: #333;
                                border: none;
                            }

                        }
                    }
                }
            }
        }
        .banner-preview img {
            z-index: 1;
        }
        .banner-preview.widescreen  {
            width: 1206px;
            height: 400px;
            box-shadow: 1px 1px 3px rgba(0, 0, 0, .15);
        }
        .widescreen-settings {
            margin-top: 20px;
            padding: 0 10px;
        }

   
        .ibanner__promocode[data-style="white"] .ibanner__promocode-hint {
            color: #333;
            background: #fff;
            border: none;

            &[data-hint-position="hint-top"]:before {
                bottom: -10px;
                border-width: 10px 10px 0 10px;
                border-color: #fff transparent transparent transparent;
            }

            &[data-hint-position="hint-bottom"]:before {
                top: -10px;
                border-width: 0 10px 10px 10px;
                border-color: transparent transparent #fff transparent;
            }  
        }

        .ibanner__promocode[data-style="black"] .ibanner__promocode-hint {
            color: #fff;
            background: #333;
            border: none;

            &[data-hint-position="hint-top"]:before {
                bottom: -10px;
                border-width: 10px 10px 0 10px;
                border-color: #333 transparent transparent transparent;
            }

            &[data-hint-position="hint-bottom"]:before {
                top: -10px;
                border-width: 0 10px 10px 10px;
                border-color: transparent transparent #333 transparent;
            } 
        }


        .top-aside-panel {
            width: 150px;
        }

        .ibanner__content {
            position: relative;
            background-position: left 0;
            height: 350px;
            border: solid 1px rgba(234,234,234,0.3);
        }

        .ibanner__content-inner {
            padding: 0 0 0 232px;
        }

        .ibanner__content-inner-extra {
            position: relative;
            width: 726px;
            height: 348px;
            margin: auto;
            font-size: 11px;
            box-shadow: inset 0 0 0 1px magenta;
        }
        .ibanner__content-inner-extra > * {
            z-index: 2;
        }

        .ibanner__content-container {
            width: 450px;
            height: 290px;
            margin: 30px 20px;
            display: inline-block;
            text-align: center;
            color: #fff;
            position: relative;
            background-color: rgba(255,255,255,.3);
        }

        .ibanner__title {
            display: inline-block;
            position: absolute;
            z-index: 2;
            cursor: move;
        }

        .ibanner__text {
            position: absolute;
            box-shadow: 0 0 0 1px rgba(0,255,255,0.5);
            white-space: pre;
            cursor: move;
            z-index: 100;
        }

        .ibanner__button {
            display: inline-block;
            position: absolute;
            z-index: 2;
            cursor: move;
        }

        .ibanner__promocode {
            display: inline-block;
            position: absolute;
            z-index: 2;
            cursor: move;
        }

        .ibanner__image {
            display: inline-block;
            position: absolute;
            z-index: 2;
            cursor: move;
        }

        .promo-code-container {
            position: absolute;
            z-index: 2;
        }

        .ibanner__promocodes {
            position: absolute;
            bottom: 30px;
            left: 0;
            width: 100%;
        }

        .ibanner__promocode {
            display: inline-block;
            width: 195px;
            color: #333;
            background-color: #fff;
            height: 40px;
            font-size: 16px;
            line-height: 41px;
            text-align: center;
        }

        .ibanner__promocode-inner {
            position: relative;
        }

        .ibanner__promocode-inner-wrap {
            z-index: 5;
            position: relative;
            text-align: center;
            height: 40px;
        }

        .ibanner__promocode b {
            font-weight: bold;
        }

        .ibanner__promocode-hint {
            position: absolute;
            width: 195px;
            color: #333;
            background-color: #fff;
            left: 0;
            bottom: 0;
            opacity: 0;
            height: 40px;
            font-size: 13px;
            line-height: 41px;
            text-align: center;
            z-index: 4;

            &:before {
                content: '';
                position: absolute;
                left: 50%;
                margin-left: -10px;
                width: 0;
                height: 0;
                border-style: solid;
            }

        }

        .ibanner__promocode-inner:hover .ibanner__promocode-hint {
            transition: bottom .15s ease, top .15s ease, opacity .3s ease-in;
            opacity: 1;

            &[data-hint-position="hint-top"] {
                bottom: 60px;
            }

            &[data-hint-position="hint-bottom"] {
                top: 60px;
            }
        }

        .ibanner__description {
            background-color: #fff;
            font-size: 11px;
            padding-top: 14px;
            color: #aaa;
            line-height: 1.5;
        }

        .form-group_title-bold {
            background-color: #efefef;

            input[data-field="name"] {
                font-weight: bold;
            }
        }

        .form-group {
            position: relative;
        }

        .menu-link {
            text-decoration: none;
            color: #fff;
            font-size: 16px;
            padding-left: 10px;
            height: auto;

            &:hover {
                color: #fff;
            }
        }

        .opac {
            opacity: .8;
        }

        .move-cursor {
            cursor: move;
        }

        .grab-cursor {
            cursor: grab;
            cursor: -webkit-grab;
        }

        .ibanner__menu {
            list-style: none;
            margin: 0;
            padding: 0;
            z-index: 20;
            float: left;
            cursor: move;
            box-shadow: 0 0 0 1px rgba(0,255,255,0.5);
            position: absolute;

            .banner-menu__item {
                padding-left: 10px;
                padding-bottom: 6px;
                box-shadow: 0 0 0 1px rgba(0,255,255,0.5);

                &.banner-menu__item_title {
                    padding-left: 0;
                    font-weight: bold;
                    padding-top: 20px;

                    &:first-child {
                        padding-top: 0;
                    }
                }

                .banner-preview__link {
                    text-decoration: none;
                    font-size: 16px;
                    padding-left: 10px;
                    height: auto;
                }
            }
        }

        .promo-button {
            margin: 0;
            border: transparent;

            &:hover {
                border: 0;
                background-color: transparent;
            }
        }

        .promo-button_ibanner {
            display: inline;
            padding: 0;
            line-height: 10px;
            height: 14px; /* fix ie */
            font-family: Arial;
            color: #fff;
            text-decoration: none;
        }

        .form-control {
            transition: none;
        }

        .banner-menu-field {
            margin-right: 2%;
            display: inline-block;
            vertical-align: top;

            &.banner-menu-field_name {
                width: 250px;
                h4 {
                    padding-left: 20px;
                }
            }

            &.banner-menu-field_url {
                width: 350px;
            }

            &.banner-menu-field_is-title {
                width: 100px;
                text-align: center;

                .control-label {
                    display: block;
                }

                input {
                    line-height: 1.4;
                    display: inline-block;
                    height: 30px;
                    width: 100%;
                    margin: 0;
                    cursor: pointer;
                }
            }

            &.banner-menu-field_label {
                width: 250px;
            }

            [data-state="show"] {
                display: inline-block;
            }

            [data-state="hide"] {
                display: none;
            }
        }

        .banner-menu-label {
            margin-right: 20px;
        }

        .banner-menu-color {
            display: inline-block;
            width: 150px;
        }

        .b-fieldset {
            margin: 0 0 20px;
            
            &--top{
                .b-field--checkbox {
                    width: auto;
                    display: inline-block;
                    margin: 0 20px 0 0;
                }
            }
                    
                    
            &--general {
                .b-form__field {
                    display: inline-block;
                }
                    
                .b-field {
                    &--image, &--text {
                        width: 80%;
                        margin: 0 2% 0 0;
                    }
                        
                    &--bg-color, &--descriptionColor {
                        width: 18%;
                    }
                }
            }
                        
        }

        .b-form__field.b-field--checkbox input[type="checkbox"] {
            margin: 0 10px 0 0;
        }

        .b-field_promocodes {
            padding: 15px 0;
        }

        .b-fieldset__one-third {
            display: table-cell;
            width: 33%;
            padding: 0 20px 0 0;
        } 

        .b-fieldset__one-third:first-child {
            padding-left: 0px;
        }

        .b-fieldset__one-third:last-child {
            padding-right: 0px;
        }

        .b-field_promocodes .b-switcher__input {
            margin: 20px 0;
            width: auto;
        }

        .b-field_promocodes .b-field-link__label {
            margin-bottom: 0;
        }

        .ibanner__titles {
            .b-fieldset__content {
                display: table;
                width: 100%;
            }
        }

        .b-field--menuColor,
        .b-field--description {
            padding: 10px 15px;
        }

        .b-markup-button {
            width: 175px;
        }

        .ibanner__titles .b-fieldset__left .b-form__field {
            display: inline-block;
            vertical-align: top;
            width: 47%;
            margin-right: 3%;
        }

        .ibanner__titles .b-fieldset__left .b-fieldset__row {
            display: inline-block;
            vertical-align: top;
            width: 47%;
        }

        .ibanner__titles .b-fieldset__left .b-fieldset__row .b-form__field {
            display: block;
            width: 100%;
        }

        .b-fieldset.ibanner__menu-items .b-form__field {
            display: inline-block;
            vertical-align: top;
            width: 23%;
            margin-right: 2%;
        }

        .b-fieldset.ibanner__menu-items .b-field__switcher-block {
            display: inline-block;
            vertical-align: top;
            width: 21%;
        }

        .ibanner__image-map {
            position: absolute;
        }

        .ibanner__image-map img {
            max-width: 100%;
            height: 350px;
        }

        .b-switcher__input {
            height: auto;
        }

    }

}

body {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}

.main-container {
    background: none;
    width: 100%;
}

.bannermaker.ip-banner .banner-preview .b-draggable__element--button[data-style=white] {
    background: #fff;
    color: #333;
    border: none;
}

.bannermaker.ip-banner .banner-preview .b-draggable__element--button[data-style=white]:hover {
    background: #fff;
    color: #333;
    border: none;
}

.bannermaker.ip-banner .banner-preview .b-draggable__element--button[data-style=black] {
    background: #333;
    color: #fff;
    border: none;
}

.bannermaker.ip-banner .banner-preview .b-draggable__element--button[data-style=black]:hover {
    background: #333;
    color: #fff;
    border: none;
}