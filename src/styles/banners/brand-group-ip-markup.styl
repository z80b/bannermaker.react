@import '../mixins/*.styl'

.b-$hash
    display block
    
    &__wrapper
        clear both
        margin auto
        width 960px
        
        .widescreen &
            width 1206px
    
    &__content
        margin 0 0 0 -20px
        font 0/0 none
        text-align center
        
    &--bottom-padding
        padding 0 0 30px
        
    &__banner
        display inline-block
        position relative
        width 470px
        height 200px
        background 50% 50% no-repeat
        background-size auto 100%
        margin 0 0 0 20px
        cursor default
            
        &[href]
            cursor pointer

            &::before
                content ''
                position absolute
                display block
                top 0
                left 0
                width 100%
                height 100%
                background #000
                opacity 0
                transition opacity .4s ease
            &:hover::before
                opacity .2
                
        .widescreen &
            width 593px
            height 253px
            
        .b-$hash--three &
            width 306px
            height 200px
            background-position 100% 50%
            
            .widescreen &
                width 388px
                height 253px
                
        .b-$hash--four &
            width 225px
            height 200px
            background-position 100% 50%
            
            .widescreen &
                width 285px
                height 253px
                
    &__text
        display table-cell
        color #333
        overflow hidden
        word-break break-all
        white-space pre-line
        font(16px, 500, 22px)
        text-align center
        vertical-align middle
        
        .b-$hash--three &
        .b-$hash--four &
            display block
            vertical-align top
            height 3em
            padding 15px 0
            background-color #fff
            margin -30px 0 0
        
        &-wrapper
            position absolute
            display table
            box-sizing border-box
            width 50%
            height 100%
            padding 20px
            
            .b-$hash--three &
            .b-$hash--four &
                display block
                left 0
                width 100%
                height auto
                top 100%
                padding 0 20px
        
    &__logo
        position absolute
        box-sizing border-box
        top 0
        left 0
        width 50%
        height 100%
        background 50% 50% no-repeat
        
        .b-$hash--three &
        .b-$hash--four &
            top auto
            bottom 0
            width 100%
            background-position 50% 100%
            border-bottom solid 20px transparent
