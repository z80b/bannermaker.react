@import '../b-form'
@import '../elements/*.styl'

.banner-preview {
    width: 284px;
    margin: 0 auto;
    padding: 20px 0;
}

.banner-preview a {
    text-decoration: none;
}

.b-menu-banner {
    display: block;
    width: 284px;
    position: relative;
}

.b-menu-banner-body {
    position: relative;
    display: inline-block;
    text-decoration: none;
    text-align: center;
}

.b-menu-banner__images {
    position: relative;
}

.b-menu-banner__images::after {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: #000;
    opacity: 0;
    -webkit-transition: .5s opacity ease;
    -moz-transition: .5s opacity ease;
    -o-transition: .5s opacity ease;
    transition: .5s opacity ease;
}
.b-menu-banner:hover .b-menu-banner__images::after {
    opacity: .2;
}

.b-menu-banner__image {
    display: block;
    width: 284px;
    height: auto;
}

.b-menu-banner__title, 
.b-menu-banner__text {
    display: block;
    color: #222;
}

.b-menu-banner__title {
    font-size: 16px;
    font-weight: 600;
    line-height: 1;
    padding: 15px 0 5px;
}

.b-menu-banner__text {
    font-size: 13px;
    font-weight: 500;
    line-height: 1;
}

.b-menu-banner__button {
    position: absolute;
    font-size: 13px;
    font-weight: 400;
    line-height: 40px;
    display: block;
    width: 150px;
    top: 104px;
    left: 50%;
    text-align: center;
    margin: 0 0 0 -75px;
    opacity: 0;
    -webkit-transition: .5s opacity ease;
    -moz-transition: .5s opacity ease;
    -o-transition: .5s opacity ease;
    transition: .5s opacity ease;
}

.b-menu-banner__button[data-style="white"] {
    color: #333;
    background-color: #fff;
}

.b-menu-banner__button[data-style="black"] {
    color: #fff;
    background-color: #333;
}

.b-menu-banner__button_centered {
    width: 150px;
    height: 40px;
    top: 50%;
    left: 50%;
    margin: -20px 0 0 -75px;
}

.b-menu-banner-body:hover + .b-menu-banner__button {
    opacity: 1;
}

.b-menu-banner-body + .b-menu-banner__button[data-style="white"]:hover,
.b-menu-banner-body:hover + .b-menu-banner__button[data-style="white"]:hover {
    opacity: 1;
    color: #333;
}

.b-menu-banner-body + .b-menu-banner__button[data-style="black"]:hover,
.b-menu-banner-body:hover + .b-menu-banner__button[data-style="black"]:hover {
    opacity: 1;
    color: #fff;
}


/*form*/
.b-field--bannerWithText,
.b-field--buttonStyle {
    width: 150px;
}