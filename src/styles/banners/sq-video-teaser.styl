.sq-main-banner-wrapper {
    width: 100%;
    padding: 20px 0 0;
}

.main-teaser-square__item--redesign {
    width: 388px;
    display: block;
    position: relative;
    padding-bottom: 53px;
    margin: 0 auto;
}

.teaser-square {
    display: block;
    width: 100%;
    height: 300px;
    background-position: center top;
    background-size: cover;
    background-repeat: no-repeat;
}
.html_wide .teaser-square {
    height: 300px;
}

.teaser-square:after {
    content: '';
    display: block;
    width: 100%;
    height: 300px;
    background: #000;
    opacity: 0;
    transition: opacity .4s ease;
    position: absolute;
    top: 0;
    left: 0;
}
.html_wide .teaser-square:after {
    height: 300px;
}

.teaser-square-text {
    background: #fff;
    width: 276px;
    padding: 16px 0;
    text-align: center;
    position: absolute;
    bottom: 6px;
    margin: auto;
    left: 0;
    right: 0;
    z-index: 2;
}
/*.html_wide*/ .teaser-square-text {
    width: 346px;
    padding: 18px 0;
    bottom: 9px;
}

.teaser-square-text__title {
    font-weight: 600;
    font-size: 16px;
    color: #333;
    margin: 0;
    padding-bottom: 6px;
}
/*.html_wide*/ .teaser-square-text__title {
    font-size: 24px;
}

.teaser-square-text__subtitle {
    font-weight: 300;
    font-size: 13px;
    color: #888;
    margin: 0;
    padding: 0;
}

.teaser-square__button {
    display: block;
    width: 160px;
    height: 32px;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -40px 0 0 -80px;
    transition: all .2s linear;
    font-size: 13px;
    font-weight: 400;
    line-height: 32px;
    background: #fff;
    color: #333;
    opacity: 0;
    text-decoration: none !important;
}
/*.html_wide*/ .teaser-square__button {
    width: 200px;
    height: 40px;
    margin: -50px 0 0 -100px;
    font-size: 13px;
    font-weight: 400;
    line-height: 40px;
}

.teaser-square__button[data-button-style="white"] {
    background: #fff;
    color: #333;
}

.teaser-square__button[data-button-style="black"] {
    background: #333;
    color: #fff;
}

.main-teaser-square__item--redesign:hover .teaser-square:after {
    opacity: .2;
}

.main-teaser-square__item--redesign:hover .teaser-square__button {
    opacity: 1;
}





/*form*/
.form-section {
    margin-top: 70px;
    padding: 0 20px;
}

.input-list {
    display: table;
    width: 100%;
    margin: 0 0 30px;
}

.input-list__cell {
    display: block;
    width: 180px;
    float: left;
    margin: 0 10px;
}

.input-list__label {
    margin-right: 10px;
    vertical-align: top;
}

.input-list__checkbox,
.input-list__number {
    width: 15px;
    display: inline-block;
    vertical-align: top;
    height: 21px;
    margin: 0;
}

.input-list__number {
    width: 75px;
}

.input-list__cell_w340 {
    width: 340px;
}

input[type=checkbox], input[type=radio] {
    margin: 0;
}



.b-fieldset--timer .b-field__checkbox[name="active"],
.b-field__checkbox {
    width: 16px;
    display: inline-block;
    vertical-align: middle;
    margin: -2px 5px 0;
}

.b-field__checkbox[name="promoState"] {
    margin: -4px 2px 0;
}


.b-field--color .b-field__input {
    display: none;
}

input[type="color"] {
    width: 215px;
    margin: 0;
}

.sq-main-banner__video {
    margin: auto;
    display: block;
    border: none;
    width: 388px;
    height: 300px;
    background-color: #8a6d3b8a;
        
}