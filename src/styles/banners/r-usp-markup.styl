@import '../../styles/mixins/*.styl'

.ibanner$hash
    margin 0 auto
    padding 7% 7% 5%
    list-style-type none
    min-width 320px
    max-width 800px
    font-size 11px
    background-color #fff
    
    &__usp
        position relative
        margin-bottom 1.5em
        white-space nowrap
        font(500)

        
        ~/.ibanner-tablet &
            margin-bottom 2.3em
        
        &:last-child
            margin-bottom 0
            
            ~/.ibanner-tablet &
                margin-bottom 0
                
        &::before
            ~/.ibanner-tablet &
                content ''
                display inline-block
                height 3em
                vertical-align middle
            
        &-icon
            width 3.5em
            
            &-wrap
                margin-bottom .5em
                text-align center
                height 35px
                background 50% 50% no-repeat
                
                ~/.ibanner-tablet &
                    position absolute
                    left 0
                    top 0
            &-car
                background-image url('data:image/svg+xml;base64,')

            &-clock
                background-image url('data:image/svg+xml;base64,')
            
            &-hanger
                background-image url('data:image/svg+xml;base64,')    
        &-content
            display inline-block
            margin 0
            padding 0 10%
            text-align center
            font(1.5em, 500, 1.5)
            vertical-align middle
            white-space normal
            
            ~/.ibanner-tablet &
                margin -.3em 0 0 3.5em
                padding 0
                text-align left
            
        &-link
            color #5080fa
            
        @media (min-width: 380px)
            font(13px)
            
            
        @media (min-width: 460px)
            font(13px)
            
        &.ibanner_tablet
            font(11px)
            
            @media (min-width: 800px)
                font(13px)
                
            @media (min-width: 1000px)
                font(13px)