@import 'mixins/*.styl'

input[disabled]
    cursor not-allowed
    background-color #eee
    opacity 1
    
.b-form
    
    &__field
        display block
        width: 100%
        
.b-fieldset
    border solid 1px rgba(#000, .1)
    border-radius 5px
    overflow hidden
    
    &__title
        font(16px, 500, 1.2)
        color #333
        background rgba(#f5f5f5, .7)
        text-align left
        padding 10px 15px
        
        &::after
            content ''
            display table
            clear both
            
    &__button
        @extend $roundButton
        float right
        
        &--add
            margin -2px
        
        &--del
            position absolute
            right -2px
            top -2px
       
    &__body
        padding 10px 15px
        background rgba(#fff, .7)
        
    &__content
        position relative
        padding 0 0 15px
        
    &__row
        display table
        
        .b-form__field
            display table-cell
            width auto
            padding 0 6px
            
            &:first-child
                padding 0 6px 0 0
                
            &:last-child
                padding 0 0 0 6px
        
    &--duoble
        display table
        
    &__left, &__right
        display table-cell
        
    &__left
        width 50%
        padding 0 20px 0 0
        
.b-field
    &__select
    &__input
    &__textarea
        display block
        width 100%
        padding 6px 12px
        margin 0 0 20px
        font(13px)
        color #555
        background-color #fff
        background-image none
        border 1px solid #ccc
        border-radius 4px
        
    &__input
    &__select
        height 36px
        line-height 34px
        
    &__textarea
        line-height 1
        
    &__checkbox, &__radio, &__label
        ~/--checkbox &
        ~/--radio &
            display inline-block
            width auto
            margin 0
            font(13px, 500, 34px)
            vertical-align middle
            
    &__label
        white-space nowrap
        ~/--radio &
        ~/--checkbox &
            margin 0 0 0 .5em
            
    &__description
        color #999
        font(13px)
        display block
        margin -18px 0 0
            
    &--lineHeight
        width 160px
            
.b-menu-settings
    border solid 1px rgba(#000, .1)
    border-radius 5px
    display none
    margin 0
    padding 10px
    
    &::after
        content ''
        display table
        clear both
    
    &--visible
        display block
        
    .b-menu-settings-item
        list-style none
        margin 0
        padding 5px 0
        vertical-align middle
        white-space nowrap
        
        &__input
            display inline-block
            margin 0 2% 0 0
            width 46%
        
        &__button
            @extend $roundButton

.b-position
    &__panel
        width 100%
        border solid 1px #ddd
        border-radius 4px
        box-shadow 0 1px 1px rgba(#000,.05)
        box-sizing border-box
        padding 15px
        
        &-body
            display table
            width 100%
        
        &-left, &-right
            display table-cell
        &-left
            width 50%
            padding-right 10px
        &-right
            width 50%
            padding-left 10px
        
        &-title
            color #1759A1
            font(13px, 700)
            padding 0 0 10px
            
.b-field--size
    min-width 160px
    
    .b-field__block
        display table
        border solid 1px #ccc
        border-radius 4px
        overflow hidden
        width 100%
    
        
    .b-field__switcher
        margin 0
        height auto
        width auto
        
        &-wrapper
            padding 6px 12px
            line-height 1
            display table-cell
            background #eee
            border-right solid 1px #ccc
            width 2em
            
    input[type=number], input[type=text], input[type=color], .b-field__label
        display inline-block
        border none
        margin 0
        
    .b-field__label
        margin 0 0 5px
    
    input[type=number], input[type=text], input[type=color]
        display table-cell
        border none
        line-height 1
        width 100%
        //height auto

.b-field__units.b-units
        display table-cell
        background #eee
        color #555
        text-align center
        white-space nowrap
        border-left solid 1px #ccc
        
.b-units
    line-height 1
    padding 6px 12px
    
    &__item
        display inline-block
        padding 0 0 0 5px
        
        &:first-child
            padding 0
        
    input[type=radio], &__label
        display inline-block
        padding 0
        margin 0
        width auto
        height auto
        line-height 1
        
    &__label
        padding 0 0 0 5px
        
.b-markup-button
    display block
    margin 20px auto 0
        
.b-markup-pre, .b-markup-block
    display none
    

.bm-settings
    &__fieldset
        margin 0 0 10px
        
        &:last-of-type
            margin 0
            