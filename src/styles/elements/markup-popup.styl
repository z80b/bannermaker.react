$control-button
    position absolute
    display block
    top -33px
    width 27px
    height 27px
    background-color rgba(#000, .5)
    border solid 2px rgba(#000, .6)
    border-radius 50%
    box-sizing border-box
    transition .5s all ease
    cursor pointer
    z-index 9
    
    &:focus
        outline none
    
    &::before, &::after
        content ''
        display block
        position absolute
        transition 1s all ease
        
    &:hover
        background-color rgba(#000, .9)
    
.b-markup-popup
    position absolute
    top 20%
    left 20%
    width 60%
    height 60%
    padding 0
    box-sizing border-box
    background none
    border solid #fff
    border-width 40px 10px 110px
    border-radius 10px
    transition .5s all ease
    
    &--maximized
        top 2%
        left 2%
        width 96%
        height 96%
   
    &__overlay
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(#2e6da457, .35)
        z-index 100500
        
        &--hidden
            display none
        
    &__textarea
        font-family monospace
        font-size 13px
        line-height 1.4
        background-color #000000ad
        color #eee
        width 100%
        height 100%
        padding 20px
        resize none
        
    &__close
        @extends $control-button
        right 0

        &::before, &::after
            background #fff
            transform rotate(45deg)
            
        &::before
            width 1px
            height 11px
            left 11px
            top 6px
            
        &::after
            width 11px
            height 1px
            left 6px
            top 11px
            
    &__maximize
        @extends $control-button
        right 30px
        
        &::after
            border solid 1px #fff
            width 11px
            height 11px
            top 6px
            left 6px
            
            ~/--maximized &
                width 5px
                height 5px
                top 9px
                left 9px
        
    .b-markup-button
        margin -65px auto 0